{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "npmScope": "noodle",
  "defaultBase": "main",
  "defaultProject": "web",
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx-cloud",
      "options": {
        "cacheableOperations": [
          "build",
          "lint",
          "lint:fix",
          "typecheck",
          "test",
          "test:coverage",
          "build-storybook"
        ],
        "accessToken": "NzVmODUwODQtNDM4Yy00MTkzLWJhYjktYWQ0ZWE4Y2E2OWI4fHJlYWQtd3JpdGU="
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "{projectRoot}/.next",
        "!{projectRoot}/.next/cache",
        "{projectRoot}/dist"
      ]
    },
    "start": {
      "dependsOn": ["build"]
    },
    "typecheck": {
      "outputs": ["{projectRoot}/tsconfig.tsbuildinfo"]
    },
    "test:coverage": {
      "outputs": ["{projectRoot}/coverage"]
    },
    "build-storybook": {
      "outputs": ["{projectRoot}/storybook-static"]
    }
  }
}
