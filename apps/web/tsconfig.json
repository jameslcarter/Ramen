{
  "extends": "@noodle/tsconfig/nextjs.json",
  "compilerOptions": {
    "types": ["vitest/globals", "@noodle/test-utils/setup"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.js",
    ".eslintrc.cjs"
  ],
  "exclude": ["node_modules", "./postcss.config.cjs", "./coverage/**/*"]
}
