generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model WaitingList {
  id        String            @id @default(cuid())
  name      String
  email     String            @unique
  reason    WaitingListReason
  approved  Boolean           @default(false)
  createdAt DateTime          @default(now())
}

enum WaitingListReason {
  STUDENT
  PROJECT
  BOTH
}
