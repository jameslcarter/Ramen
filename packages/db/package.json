{
  "name": "@noodle/db",
  "version": "0.1.0",
  "private": true,
  "description": "Noodle's prisma database package",
  "license": "AGPL-3.0",
  "author": "Ahmed Elsakaan",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
