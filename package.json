{
  "name": "noodle",
  "version": "0.1.0",
  "description": "Rethinking Student Productivity",
  "license": "AGPL-3.0",
  "author": "Ahmed Elsakaan",
  "type": "module",
  "scripts": {
    "build": "pnpm turbo build",
    "build-storybook": "pnpm turbo build-storybook --filter=@noodle/storybook",
    "build:pkgs": "pnpm turbo build --filter=!web",
    "clean": "del pnpm-lock.yaml **/coverage **/storybook-static **/tsconfig.tsbuildinfo **/dist **/.next **/node_modules && pnpm install",
    "dev": "pnpm turbo dev",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "lint": "pnpm turbo lint",
    "lint:fix": "pnpm turbo lint:fix",
    "prepare": "husky install",
    "start": "pnpm turbo start",
    "storybook": "pnpm turbo storybook --filter=@noodle/storybook",
    "test": "pnpm turbo test",
    "test:coverage": "pnpm turbo test:coverage",
    "test:ui": "pnpm turbo test:ui",
    "test:watch": "pnpm turbo test:watch",
    "typecheck": "pnpm turbo typecheck"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@ianvs/prettier-plugin-sort-imports": "^4.0.1",
    "@noodle/tsconfig": "workspace:^",
    "@types/eslint": "^8.40.0",
    "@types/node": "^20.2.5",
    "@types/prettier": "^2.7.2",
    "del-cli": "^5.0.0",
    "eslint": "^8.41.0",
    "eslint-config-noodle": "workspace:^",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "nx-cloud": "latest",
    "prettier": "^2.8.8",
    "prettier-plugin-jsdoc": "^0.4.2",
    "prettier-plugin-packagejson": "^2.4.3",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "turbo": "^1.10.0",
    "typescript": "^5.0.4"
  },
  "packageManager": "pnpm@8.6.0",
  "engines": {
    "node": ">=18.16.0",
    "pnpm": ">=8.6.0"
  },
  "pnpm": {
    "patchedDependencies": {
      "@types/testing-library__jest-dom@5.14.6": "patches/@types__testing-library__jest-dom@5.14.6.patch"
    }
  }
}
